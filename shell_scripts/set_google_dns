#!/usr/bin/env bash

################################################################################
# Set Google DNS as default                                                    #
################################################################################

################################################################################
# This is usually a symlink, so it will be deleted
################################################################################
rm -f /etc/resolv.conf

################################################################################
# Create a new resolv.conf file with Google nameservers
################################################################################
cat << EOF > /etc/resolv.conf
nameserver 8.8.8.8
nameserver 8.8.4.4
nameserver 2001:4860:4860::8888
nameserver 2001:4860:4860::8844
EOF

################################################################################
# Set immutable attribute so the file will not be overwritten
################################################################################
chattr +i /etc/resolv.conf
