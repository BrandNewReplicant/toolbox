{
  "$schema": "https://aka.ms/winget-settings.schema.json",
  "source": {
    "autoUpdateIntervalInMinutes": 60
  },
  "telemetry": {
    "enableTelemetry": false
  },
  "visual": {
    "progressBar": "rainbow"
  },
  "installBehavior": {
    "skipDependencies": false,
    "preferences": {
      "scope": "user",
      "locale": [
        "en-US"
      ],
      "architectures": [
        "x64"
      ]
    },
    "uninstallBehavior": {
      "purgePortablePackage": true
    }
  }
}